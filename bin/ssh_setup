#!/usr/bin/env bash

# Arguments:
#
#   email

# Bash strict mode
set -euo pipefail

# Generate SSH key pair
ssh-keygen -t ed25519 -C $1

# Add it to the ssh-agent
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_ed25519

echo "Here is your public SSH key. Add it to Github by going to your settings."
cat ~/.ssh/id_ed25519.pub

git remote set-url origin git@github.com:jgnog/dotfiles.git

ssh-copy-id jgnog@ribnog-server
