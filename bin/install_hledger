#!/usr/bin/env bash

mkdir hledger
cd hledger
curl -L -C - -o hledger.zip https://github.com/simonmichael/hledger/releases/download/1.22/hledger-linux-static-x64.zip
unzip hledger.zip
rm hledger.zip
mv hledger-ui* /usr/local/bin/hledger-ui
mv hledger-web* /usr/local/bin/hledger-web
mv -T hledger* /usr/local/bin/hledger
chmod +x /usr/local/bin/hledger*
cd ..
rm -r hledger/
