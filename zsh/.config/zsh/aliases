alias c='clear'
alias ..='cd ..' 
alias ...='cd ../../' 
alias ....='cd ../../../' 
alias mkdir='mkdir -pv'
alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -alh'
alias mux=tmuxinator
alias vim=nvim
alias vi=nvim
alias bat=batcat
alias avenv='source venv/bin/activate'
alias aptup='sudo apt update && sudo apt upgrade -y'
alias aws-login='aws-adfs login --profile dundata-dl-dev && export AWS_PROFILE=dundata-dl-dev'
alias cal='ncal -bw'
alias xop='xdg-open'
alias ntf='~/tf-pipeline-library/pipeline/scripts/prepare.sh'
alias dateiso='date +"%F"'
alias edconf='find $HOME/dotfiles/dotfiles | fzf | xargs $EDITOR'
alias randompass='openssl rand -base64 16'
alias todo='$EDITOR $NOTESDIR/todo.md'
alias xclip='xclip -sel clip'
alias killbg='kill ${${(v)jobstates##*:*:}%=*}'
alias ureload='xrdb -merge ~/.Xresources'

# If OS is MacOS, unalias bat
# This is because the command for bat in Linux is batcat, hence the previous
# alias, but the command in MacOS, as installed by Homebrew, is just bat.
[[ "$(uname)" == "Darwin" ]] && unalias bat
