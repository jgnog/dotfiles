[core]
    editor = vim
	autocrlf = input

[alias]
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
    s = status
    ci = commit
    ca = commit -a
    co = checkout
    br = branch
    logg = log --graph --oneline
    unstage = reset HEAD
[pull]
	rebase = false
[diff]
	tool = vimdiff
